{
  "extends": "standard",
  "rules": {
    "generator-star-spacing": ["error", { "before": false, "after": true }],
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
    "operator-linebreak": ["error", "after"],
    "padded-blocks": "off",
    "no-multi-spaces": "off",
    "camelcase": 0,
    "brace-style": ["error", "stroustrup"]
  },
  "env": {
    "mocha": true
  }
}
